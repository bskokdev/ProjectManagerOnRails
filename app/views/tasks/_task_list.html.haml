%h3 Tasks

%table.table
  %thead
    %tr
      %th Subject
      %th Status
      %th Resolving User
      %th Actions
  %tbody
    - @tasks.each do |task|
      %tr
        %td= link_to "#{task.subject}", project_task_path(@project, task)
        %td= task.status
        %td= User.find(task.user_id).full_name
        %td.d-flex
          %a.btn.btn-primary.mr-2{ href: edit_project_task_path(@project, task) } Edit
          = button_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

= paginate @tasks
