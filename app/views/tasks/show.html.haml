%h1 Task Details
= button_to 'Back', project_path(@project), method: :get
= button_to 'Edit', edit_project_task_path(@project, @task), method: :get
= button_to 'Delete', project_task_path(@project, @task), method: :delete, data: { confirm: 'Are you sure?' }

%table
  %tr
    %td Subject:
    %td= @task.subject
  %tr
    %td Attachments:
    %td
      - @task.attachments.each do |attachment|
        %div
          = link_to 'Download Attachment', attachment.upload.url if attachment.upload.present?
          %span= attachment.description
