= simple_form_for @user, html: { class: 'needs-validation', multipart: true } do |f|
  .form-group
    = f.input :avatar, as: :file, input_html: { class: 'form-control-file' }, label: 'Avatar'
  .form-group
    = f.input :first_name, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' }
  .form-group
    = f.input :last_name, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' }
  .form-group
    = f.input :address, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' }
  .form-group
    = f.input :email, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' }
  .form-group
    = f.input :password, input_html: { class: 'form-control' }, label_html: { class: 'form-label' }
  .form-group
    = f.button :submit, class: 'btn btn-primary'

