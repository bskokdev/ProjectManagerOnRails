%h1 User Details

= button_to 'Back', users_path, method: :get
= button_to 'Edit', edit_user_path(@user), method: :get

%table
  %tr
    %td Avatar:
    %td= image_tag(@user.avatar.url, size: "100x100") if @user.avatar?
  %tr
    %td First Name:
    %td= @user.first_name
  %tr
    %td Last Name:
    %td= @user.last_name
  %tr
    %td Email:
    %td= @user.email
  %tr
    %td Address:
    %td= @user.address
